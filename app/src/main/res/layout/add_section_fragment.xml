<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/blue"
        tools:openDrawer="start"
        >
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_bar">
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:id="@+id/btn_back"
                    android:src="@drawable/ic_arrow_back_black_24dp"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/tv_title"
                    android:text="一级标题"/>

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@color/black_ff"/>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_12"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:paddingBottom="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ll_group_1"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp">
                            <LinearLayout
                                android:paddingStart="@dimen/dp_12"
                                android:paddingEnd="@dimen/dp_12"
                                android:background="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="一级标题名称"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/et_chapter_name"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:hint="请输入一级标题名称"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:paddingBottom="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp">
                            <LinearLayout
                                android:paddingStart="@dimen/dp_12"
                                android:paddingEnd="@dimen/dp_12"
                                android:background="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="一级标题位置"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/et_chapter_position"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:hint="请输入一级标题位置"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp_12"
                        android:background="@color/white"
                        android:paddingBottom="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp">
                            <LinearLayout
                                android:paddingStart="@dimen/dp_12"
                                android:paddingEnd="@dimen/dp_12"
                                android:background="@color/white"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="标题名称"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/et_chapter_title"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:hint="请输入标题名称"/>
                                <ImageView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:src="@drawable/ic_baseline_close_24"
                                    android:id="@+id/btn_delete_title"/>
                            </LinearLayout>
                            <LinearLayout
                                android:paddingStart="@dimen/dp_12"
                                android:paddingEnd="@dimen/dp_12"
                                android:background="@color/white"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="内容名称"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <EditText
                                    android:id="@+id/et_content_title"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:hint="请输入内容名称"/>
                                <ImageView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:src="@drawable/ic_baseline_close_24"
                                    android:id="@+id/btn_delete_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_group_2"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:id="@+id/btn_add">
                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:src="@drawable/ic_baseline_add_circle_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="添加新标题"/>
                        </LinearLayout>
                    </RelativeLayout> <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/btn_add_content">
                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:src="@drawable/ic_baseline_add_circle_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="添加新内容"/>
                    </LinearLayout>
                </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="@dimen/dp_24"
                        android:id="@+id/rv_pre_view"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="保存"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/dp_24"
                        android:layout_marginEnd="@dimen/dp_24"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_button_green"
                        android:id="@+id/btn_save"/>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </RelativeLayout>
</layout>